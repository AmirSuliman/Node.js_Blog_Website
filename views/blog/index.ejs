<!DOCTYPE html>
<html lang="en">

  <%- include('../partials/head.ejs') %>

<body>

  <%- include('../partials/nav.ejs') %>

  <div class="blogs container">
    <h2>All Blogs</h2>
    <% if (blogs.length > 0) { %>
      <% for ( blog of blogs ) { %>
        <a href="/blogs/<%= blog._id %>">
          <h3><%= blog.title %></h3>
          <p><%= blog.snippet %></p>
        </a>
      <% } %>
    <% } else { %>
      <p>No blogs to display</p>
    <% } %>
  </div>
  
  <!-- footer -->
  <%- include('../partials/footer.ejs') %>

</body>

</html>